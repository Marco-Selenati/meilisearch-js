{
  "name": "meilisearch",
  "version": "0.30.0",
  "description": "The Meilisearch JS client for Node.js and the browser.",
  "keywords": [
    "meilisearch",
    "search",
    "instant",
    "relevant",
    "client",
    "wrapper",
    "meili"
  ],
  "author": "cvermand <charlotte@meilisearch.com>",
  "contributors": [
    "qdequele <quentin@meilisearch.com>"
  ],
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/bundles/meilisearch.esm.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "module": "./dist/bundles/meilisearch.esm.js",
  "typings": "./dist/types/index.d.ts",
  "types": "./dist/types/index.d.ts",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/meilisearch/meilisearch-js"
  },
  "scripts": {
    "playground:javascript": "pnpm --cwd ./playgrounds/javascript && pnpm --cwd ./playgrounds/javascript start",
    "clear_jest": "jest --clearCache",
    "cleanup": "shx rm -rf dist/",
    "build": "pnpm cleanup && rollup -c && rollup -c --environment NODE_ENV:production",
    "watch": "pnpm cleanup && rollup -c --watch",
    "postbuild": "pnpm size && pnpm typingsheader",
    "test": "pnpm clear_jest && jest --runInBand --verbose",
    "types:watch": "nodemon --config nodemon.json",
    "types": "pnpm tsc",
    "test:env:browser": "pnpm --cwd tests/env/express && pnpm --cwd tests/env/express test",
    "test:watch": "pnpm clear_jest && pnpm test --watch",
    "test:coverage": "pnpm test --coverage",
    "test:ci": "pnpm test --ci",
    "test:env": "pnpm build && pnpm test:env:nodejs && pnpm test:env:esm && pnpm test:env:node-ts",
    "test:env:node-ts": "pnpm --cwd tests/env/typescript-node start",
    "test:env:nodejs": "node tests/env/node/index.js",
    "test:env:esm": "pnpm --cwd tests/env/esm && pnpm --cwd tests/env/esm start",
    "size": "node scripts/file-size ./dist/bundles/meilisearch.esm.min.js ./dist/bundles/meilisearch.umd.min.js",
    "style": "pnpm lint",
    "style:fix": "pnpm lint:fix",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "lint:fix": "eslint --ext .js,.ts,.tsx --fix .",
    "typingsheader": "node scripts/build.js"
  },
  "files": [
    "src",
    "dist",
    "CONTRIBUTING.md"
  ],
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,css,scss,sass,less,md}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{ts,tsx}": [
      "pnpm lint:fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "23.0.4",
    "@rollup/plugin-json": "^5.0.2",
    "@rollup/plugin-node-resolve": "15.0.1",
    "@types/jest": "^27.5.2",
    "@types/prettier": "^2.7.1",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "abort-controller": "^3.0.0",
    "brotli-size": "^4.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^24.7.0",
    "eslint-plugin-jsdoc": "^32.3.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^5.0.0",
    "gzip-size": "^6.0.0",
    "jest": "^26.6.3",
    "jest-fetch-mock": "^3.0.3",
    "jest-watch-typeahead": "^0.6.5",
    "kleur": "^4.1.5",
    "lint-staged": "11.1.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "pretty-bytes": "^5.6.0",
    "rollup": "^2.79.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.34.1",
    "shx": "^0.3.4",
    "ts-jest": "^26.5.6",
    "tslib": "^2.4.1",
    "typescript": "4.6.4"
  }
}
